[alias]
  a = add
  ci = commit
  co = checkout
  di = diff --color-words
  br = branch
  ff = merge --ff-only
  up     = pull --rebase
  update = pull --rebase
  st   = status
  stat = status
  export = archive
  cat  = show
  ls   = show
  type = cat-file -t
  dump = cat-file -p
  pick = cherry-pick

  tree = log --graph --pretty=oneline
  hist = log --graph --pretty=format:'%C(cyan)%h%Creset -%C(yellow)%d%Creset %s %C(magenta)[%an]%Creset %Cgreen(%ad)%Creset' --date=relative
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  pager = less -FRX
  excludesfile = ~/.gitignore
  safecrlf = true
  autocrlf = input
  editor = /usr/bin/vim
[push]
  default = current
[user]
  name = Dylan Nugent
  email = dylnuge@gmail.com
[branch]
  autosetuprebase = always
[merge]
  tool = vimdiff
